.header
	position fixed
	z-index 20
	width 100%
	height 125px
	background-color #ffffff
	box-shadow: 2px -4px 35px 0px rgba(0,0,0,0.75)
.nav
	display flex
	justify-content space-between
	align-items center
	margin 0 auto
	padding 0
	width screenXL
	height inherit
	text-transform uppercase
	&__menu
		size(622px, 125px)
		width screenXL
		height inherit
	&__item
		display inline-block
	&__link
		latoBold()
		font-size 18px
		padding 56.5px 25px 50.5px
		&:hover
			background-color mainColor
			color #ffffff