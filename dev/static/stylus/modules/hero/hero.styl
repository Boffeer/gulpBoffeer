.hero
	position relative
	z-index 1
	margin-top 125px
	padding 325px 10px 196px
	height 915px
	width 100%
	background #96b1b4 url(../img/content/hero-bg.png)
	background-size cover
	text-align center
	color #ffffff
	&:before
		content ''
		display block
		position absolute
		z-index 0
		top 0
		left 0
		size(100%, 100%)
		background rgba(#96b1b4, 0.5)
	&-text
		position relative
		z-index 3
		width 1030px
		margin 0 auto
	&__title
		font-size 68px
		latoBold()
		margin 0 0 40px 0
	&__descr
		arial()
		font-size 16px
		margin 0 0 90px 0
	&__link
		display inline-block
		size(285px, 70px)
		padding 20px 41px
		color #ffffff
		latoBold()
		