.service
	display flex
	background-color #efeeee
	size(100%, 610px)
	&-slider-wrap
		size(50%, 610px)
		overflow hidden
	&-descr
		width 50%
		padding 55px 0 0 0
	&__title
		title()
	&-features
		display flex
		justify-content space-around
		flex-flow row wrap
		padding 25px 0 0 45px
	&-feature
		size(370px, 175px)
		margin 0 0 30px
		color #959595
		&__pic
			text-align center
			margin 0 0 20px 0
		&__descr
			font-size 14px
			font-weight 500
			text-align justify
			line-height 1.7